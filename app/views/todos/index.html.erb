<h1>List of Todo's</h1>



<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @todos.each do |todo| %>
  <tr>
    <td><%= todo.name %></td>
    <td><%= todo.description %></td>
    <td>| <%= link_to "Edit", edit_todo_path(todo.id) %></td>
    <td>| <%= link_to "Show", todo_path(todo.id) %></td>
    <td>| <%= link_to "Delete", todo_path(todo.id), method: :delete %></td>
  </tr>
  <% end %>


</table>





<p><%= link_to "Create New Todo", new_todo_path %></p>
